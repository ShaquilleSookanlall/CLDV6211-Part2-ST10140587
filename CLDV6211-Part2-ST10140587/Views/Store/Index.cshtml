@model IEnumerable<Product>

@{
    ViewData["Title"] = "Catalogue";
}

<style>
    /* CSS for Catalogue Page with Grey and Orange Theme */

    html {
        font-size: 14px;
    }


    .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
        box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #FF6600; /* Orange focus color */
    }

    html {
        position: relative;
        min-height: 100%;
    }

    body {
        margin-bottom: 60px;
        background-color: #333333; /* Dark grey background */
        color: #FFFFFF; /* White text color */
    }

    .card {
        margin-bottom: 20px;
        background-color: #555555; /* Grey background */
        width: 90%;
        max-width: 100%;
        height: 100%;
        margin: auto;
        color: #FFFFFF; /* White text color */
    }

    .card-header {
        background-color: #FF6600; /* Orange background */
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        width: 100%;
    }

    .card-body {
        text-align: center;
        height: 100%;
    }

    .card-title {
        font-size: 1.2em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 1em;
        color: #FFFFFF; /* White text color */
    }

    .card-footer {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #FF6600; /* Orange background */
    }

    .btn-success {
        background-color: #FF6600; /* Orange button background */
        border-color: #FF6600;
    }

    .btn-success:hover {
        background-color: #FF5500; /* Darker orange on hover */
        border-color: #FF5500;
    }
</style>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3 d-flex align-items-stretch">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@item.ProductName</h5>
                </div>
                <img src="@item.ProductImage" class="card-img-top" alt="@item.ProductName" />
                <div class="card-body">
                    <p class="card-text"><b>@item.ProductName</b></p>
                    <p class="card-text"><b>Price:</b> @item.ProductPrice.ToString("c")</p>
                    <p class="card-text"><b>Category:</b> @item.ProductCategory</p>
                    <p class="card-text"><b>Availability:</b> @item.ProductAvailability</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-success text-white"
                       asp-controller="Orders"
                       asp-action="AddItemToShoppingCart"
                       asp-route-id="@item.Id">
                        <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.ProductPrice.ToString("c"))
                    </a>
                </div>
            </div>
        </div>
    }
</div>
