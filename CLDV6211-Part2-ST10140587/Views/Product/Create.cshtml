@model Product

@{
    ViewData["Title"] = "Add a new product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add a new product</title>
    <link rel="stylesheet" href="/css/site.css">
</head>
<body style="background-color: #333333;">

    <div class="row text">
        <div class="col-md-8 offest-2">
            <p>
                <h1 style="color: #FFFFFF;">Add a new Product</h1>
            </p>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group text-center">
                            <img id="ProductPicturePreview" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductImage" class="control-lable" style="color: #FFFFFF;"></label>
                            <input asp-for="ProductImage" class="form-control" style="background-color: #333333; color: #FFFFFF; border: 1px solid #FFFFFF;" />
                            <span asp-validation-for="ProductImage" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductName" class="control-lable" style="color: #FFFFFF;"></label>
                            <input asp-for="ProductName" class="form-control" style="background-color: #333333; color: #FFFFFF; border: 1px solid #FFFFFF;" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductPrice" class="control-lable" style="color: #FFFFFF;"></label>
                            <input asp-for="ProductPrice" class="form-control" style="background-color: #333333; color: #FFFFFF; border: 1px solid #FFFFFF;" />
                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductCategory" class="control-lable" style="color: #FFFFFF;"></label>
                            <input asp-for="ProductCategory" class="form-control" style="background-color: #333333; color: #FFFFFF; border: 1px solid #FFFFFF;" />
                            <span asp-validation-for="ProductCategory" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductAvailability" class="control-lable" style="color: #FFFFFF;"></label>
                            <input asp-for="ProductAvailability" class="form-control" style="background-color: #333333; color: #FFFFFF; border: 1px solid #FFFFFF;" />
                            <span asp-validation-for="ProductAvailability" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function ()) {
            var output = document.getElementById('ProductPicturePreview');
            output.src = $("#ProductImage").val();
        }

        $("#ProductImage").on("change", function () {
            var output = document.getElementById('ProductPicturePreview');
            output.src = $(this).val();
        })
    </script>
}
